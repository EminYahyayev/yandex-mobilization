<resources>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="ArtistItemText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="ArtistDetailContainer">
        <!--<item name="android:layout_marginTop">@dimen/element_spacing_normal</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?listPreferredItemHeightSmall</item>
    </style>

    <style name="ArtistDetailContainer.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ArtistDetailIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="ArtistDetailLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/element_spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/element_spacing_normal</item>
        <item name="android:layout_marginStart">@dimen/keyline_2_minus_16dp</item>
        <item name="android:layout_marginEnd">@dimen/keyline_1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ArtistDetailText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/keyline_2_minus_16dp</item>
        <item name="android:layout_marginEnd">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/body_text_1</item>
        <item name="colorControlNormal">@color/body_text_2</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

</resources>
